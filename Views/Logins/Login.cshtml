@model WebApp.Models.Login
@*@Html.AntiForgeryToken()*@

@*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account" class="control-label"></label>
                <input name="Account" asp-for="Account" class="form-control" />
                <span asp-validation-for="Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input name="Password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a asp-action="Create" >注册账号</a>
            </div>
            @ViewData["Repeat"]

        </form>
    </div>
</div>

